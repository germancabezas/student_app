

<div ng-controller="courseCtrl">
  <div class="center">
    <div ng-if="alphabetVisible" class="alphabet_search">
      <ul>
        <% @alphabet.each do |letter|%>
        <li >
          <%= link_to "#{letter}", courses_path(:letter => letter), :class => "alphabet-link" %>
        </li>
        <% end %>
        </ul>
    </div>
    <a href="" class="alphabet-search-pulldown" ng-click="showAlphabetSearch()">
      <img src="<%= asset_path 'alphabet-search.png'%>">
    </a>
    <% if @courses %>
      <div>
      <%= will_paginate @courses, :page_links => false %>
      <hr>
      </div>
      <div class="grid-items-lines">
        <%  @courses.each do |course| %>
          <a href="/courses/<%= course.id %>" class="grid-item">
            <img src="https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/placeholder_logo_1_dark.png" alt="">
            
            <h1><%= course.name %></h1>
            <p><%= course.description %></p>
          </a>
        <% end %>

        <div class="right-cover"></div>
        <div class="bottom-cover"></div>
      </div>
      <hr>
      <%= will_paginate @courses, :page_links => false %>
    <% end %>
  </div>
</div>













