<div class="center">

      <h1> Add a new course </h1>
      <%=form_for Course.new do |f| %>
        <%=f.label :name%>
        <%=f.text_field :name%>

        <%=f.label :description%>
        <%=f.text_field :description%>

        <%=f.label :image%>
        <%=f.file_field :image%>
        <%=submit_tag "Create Course"%>
      <%end%>     
</div>





