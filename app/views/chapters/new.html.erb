<div class="center">
  <br>
  <h2> Add New Chapter Below </h2>

  <%=form_tag'/chapters' do%>
    <%=label_tag :name%>
    <%=text_field_tag :name%>

    <%= hidden_field_tag :course_id, @course.id %>
    <%=label_tag :description%>
    <%=text_field_tag :description%>

    <%=submit_tag "Add"%>
  <%end%>


</div>
